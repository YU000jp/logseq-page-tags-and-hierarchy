{
    "name": "logseq-page-tags-and-hierarchy",
    "description": "Display page-tags and hierarchy on the right-hand side of the page.",
    "repository": "https://github.com/YU000jp/logseq-page-tags-and-hierarchy.git",
    "author": "YU000jp",
    "license": "MIT",
    "logseq": {
        "id": "logseq-page-tags-and-hierarchy",
        "title": "Page-tags and Hierarchy (UI)",
        "icon": "./icon.svg",
        "main": "./dist/index.html"
    },
    "effect": true,
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "clean": "rm -r ./dist/* || true",
        "dev": "vite",
        "build": "tsc && vite build --mode=dev",
        "prod": "npm run clean && vite build"
    },
    "dependencies": {
        "@logseq/libs": "^0.0.15",
        "logseq-l10n": "^0.2.0",
        "remove-markdown": "^0.5.0"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^18.17.12",
        "conventional-changelog-conventionalcommits": "^5.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "jest": "^29.6.4",
        "npx": "^10.2.2",
        "rollup-plugin-string": "^3.0.0",
        "semantic-release": "^21.1.1",
        "typescript": "^5.2.2",
        "vite": "^4.4.9",
        "vite-plugin-logseq": "^1.1.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}